{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["ES2021", "DOM", "ES2021.WeakRef"],
		"jsx": "react-jsx",
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"composite": true,
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"],
			"@lib/*": ["./lib/*"],
			"@components/*": ["./components/*"],
			"@context/*": ["./context/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
